{{> includes/header}}

<h1>Movies page</h1>

<form action="/movies" method="post">
    <div>
        <label>movie: <input type="text" name="name"/> </label>
    </div>
    <div style="margin-top: 8px;">
        <input type="submit" value="Search"/>
    </div>
    <input type="hidden" name="_csrf" value="{{_csrf.token}}"/>
</form>
<hr>

<table>
{{#movie}}
<tr>
    <td>{{Title}}</td>
    <td>{{Year}}</td>
    <td>{{imdbID}}</td>
    <td>{{Type}}</td>
    <td><img src="{{Poster}}" alt="" height="150px"></td>
</tr>
{{/movie}}
</table>
{{> includes/footer}}